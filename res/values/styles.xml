<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue_actionbar</item>

        <!-- Support library compatibility -->
        <item name="background">@color/blue_actionbar</item>
    </style>

    <style name="AppBaseThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppThemeNoActionBar" parent="AppBaseThemeNoActionBar"></style>

</resources>